{
  "name": "contacts-api",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "start": "node --env-file=.env dist/index.js",
    "build": "tsc",
    "docs:generate": "graphdoc -e http://localhost:4001/graphql -o ./docs --force",
    "docs:serve": "npx http-server docs -p 8080 -o"
  },
  "dependencies": {
    "@apollo/server": "^4.10.0",
    "@graphql-tools/schema": "^10.0.25",
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "graphql": "^16.9.0",
    "graphql-scalars": "^1.24.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@2fd/graphdoc": "^2.4.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "http-server": "^14.1.1",
    "tsx": "^4.19.2",
    "typescript": "^5.5.4"
  }
}
